{
  "name": "regex",
  "version": "3.0.0",
  "description": "Regex template tag with extended syntax, context-aware interpolation, and always-on best practices",
  "author": "Steven Levithan",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/regex.d.ts",
      "import": "./src/regex.js"
    }
  },
  "scripts": {
    "esbuild": "esbuild src/regex.js --bundle --minify --outfile=dist/regex.min.js --global-name=Regex",
    "prebuild": "rimraf --glob dist/* types/*",
    "build": "npm run esbuild && npm run types",
    "pretest": "npm run esbuild",
    "test": "jasmine",
    "types": "tsc src/regex.js --rootDir src --declaration --allowJs --emitDeclarationOnly --outdir types",
    "prepare": "npm test && npm run types"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slevithan/regex.git"
  },
  "keywords": [
    "regex",
    "regexp"
  ],
  "dependencies": {
    "regex-utilities": "^2.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "jasmine": "^5.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3"
  }
}
