{
  "name": "regex",
  "version": "2.1.0",
  "description": "Context-aware regex template tag with advanced features and best practices built-in",
  "author": "Steven Levithan",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "scripts": {
    "esbuild": "esbuild src/index.js --bundle --minify --outfile=dist/regex.min.js --global-name=Regex",
    "prebuild": "rimraf dist types",
    "build": "npm run esbuild && npm run types",
    "pretest": "npm run build",
    "test": "jasmine",
    "types": "tsc src/index.js --rootDir src --declaration --allowJs --emitDeclarationOnly --outdir types",
    "prepare": "npm test"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slevithan/regex.git"
  },
  "keywords": [
    "regex",
    "regexp"
  ],
  "dependencies": {
    "regex-utilities": "^2.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "jasmine": "^5.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3"
  }
}
